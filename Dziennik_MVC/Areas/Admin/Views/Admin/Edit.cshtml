@model Dziennik_MVC.Models.Entities.Admins

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edycja konta</legend>

        @Html.HiddenFor(model => model.UserID)

        <div class="editor">
            @Html.LabelFor(model => model.Login)        
            @Html.TextBoxFor(model => model.Login,  new { disabled = "disabled" } )
            @Html.HiddenFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="editor">
            @Html.HiddenFor(model => model.Password)
        </div>

        <div class="editor">
            @Html.HiddenFor(model => model.CreationDate)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.isActive)
            @Html.EditorFor(model => model.isActive)
            @Html.ValidationMessageFor(model => model.isActive)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.FirstName)       
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.LastName)       
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.BirthDay)
            @Html.EditorFor(model => model.BirthDay)
            @Html.ValidationMessageFor(model => model.BirthDay)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.RoleID, "Uprawnienia")
            @Html.DropDownList("RoleID",ViewBag.ListaUprawnien as SelectList)
            @Html.ValidationMessageFor(model => model.RoleID)
        </div>

        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
    <div>
         @Html.ActionLink("wróć do Profilu", "Profile", new { login = User.Identity.Name })
    </div>
}

