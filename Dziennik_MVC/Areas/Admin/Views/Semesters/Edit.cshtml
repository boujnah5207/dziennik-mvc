@model Dziennik_MVC.Models.Entities.Semesters

@{
    ViewBag.Title = "Edytuj semestr";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edycja semestru</legend>

        @Html.HiddenFor(model => model.SemesterID)

        <div class="editor">
            @Html.LabelFor(model => model.Type)   
            @Html.DropDownListFor(model => model.Type, new[]{
                new SelectListItem() { Text = "letni", Value = "letni" },
                new SelectListItem() { Text = "zimowy", Value = "zimowy" }
            })
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.Year)
            @Html.EditorFor(model => model.Year)
            @Html.ValidationMessageFor(model => model.Year)
        </div>
        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Lista semestrów", "List")
</div>
