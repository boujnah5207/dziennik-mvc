@model Dziennik_MVC.Models.Entities.Administrator

@{
    ViewBag.Title = "Edycja profilu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edycja konta</legend>

        @Html.HiddenFor(model => model.id_uzytkownika)

        <div class="editor">
            @Html.LabelFor(model => model.login)        
            @Html.TextBoxFor(model => model.login, new { disabled = "disabled" })
            @Html.HiddenFor(model => model.login)
            @Html.ValidationMessageFor(model => model.login)
        </div>

        <div class="editor">
            @Html.HiddenFor(model => model.haslo)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.aktywny)
            @Html.EditorFor(model => model.aktywny)
            @Html.ValidationMessageFor(model => model.aktywny)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.imie)       
            @Html.EditorFor(model => model.imie)
            @Html.ValidationMessageFor(model => model.imie)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.nazwisko)       
            @Html.EditorFor(model => model.nazwisko)
            @Html.ValidationMessageFor(model => model.nazwisko)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.email)
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="editor">
            @Html.LabelFor(model => model.id_uprawnienia, "Uprawnienia")
            @Html.DropDownList("id_uprawnienia", ViewBag.ListaUprawnien as SelectList)
            @Html.ValidationMessageFor(model => model.id_uprawnienia)
        </div>

        <p>
            <input type="submit" value="Zapisz zmiany" />
        </p>
    </fieldset>
    <div>
         @Html.ActionLink("wróć do Profilu", "Profile")
    </div>
}

